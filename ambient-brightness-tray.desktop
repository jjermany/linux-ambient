[Desktop Entry]
Version=1.0
Type=Application
Name=Ambient Brightness Indicator
Comment=System tray indicator for ambient brightness control
Icon=display-brightness-symbolic
Exec=sh -c 'pgrep -f "ambient-brightness-gui --tray" > /dev/null || exec ambient-brightness-gui --tray'
Terminal=false
Categories=System;
X-GNOME-Autostart-enabled=true
Hidden=false
NoDisplay=true
X-GNOME-Autostart-Delay=2
StartupNotify=false
